                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="billing-info mb-4">
                                    <label style="font-size: small;">Email Address</label>
                                    <input  class="form-control" type="text" name="contact_info[email]"     placeholder="Email Address"  required
                                    <% if (typeof order.contact_info!= undefined && order.contact_info.email!="") { %>
                                        placeholder="<%=order.contact_info.email%>"
                                        value="<%=order.contact_info.email%>"
                                       <%}  else  {%>
                                     
