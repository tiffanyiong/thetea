                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="billing-info mb-4">
                                    <label style="font-size: small;">Last Name</label>
                                    <input class="form-control" type="text"    placeholder="Last Name"  name="shipping_info[last_name]"required
                                    <% if (typeof order.contact_info!= undefined && order.shipping_info.last_name!="") { %>
                                        value="<%=order.shipping_info.last_name%>"
                                       <%}  else  {%>
                                     
                                       <%} %>
                                    />
                                </div>
                            </div>
                            
                    
                            <div class="col-lg-12">
                                <div class="billing-info mb-4">
                                    <label style="font-size: small;">Address</label>
                                    <input class="form-control" placeholder="Address"  name="shipping_info[address]" type="text" required
                                    <% if (typeof order.shipping_info!= undefined && order.shipping_info.address!="") { %>
                                      
                                        value="<%=order.shipping_info.address%>"
                                       <%}  else  {%>
                              
                                       <%} %>
