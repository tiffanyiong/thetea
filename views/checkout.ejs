                    <div class="your-order-area">
                        <h3>Your order</h3>
                        <div class="your-order-wrap gray-bg-4">
                            <div class="your-order-product-info">
                                <div class="your-order-top">
                                    <ul>
                                        <li>Product</li>
                                        <li>Total</li>
                                    </ul>
                                </div>
                                <div class="your-order-middle">

                                    <% if (cart === null || cart.items.length == 0) { %>
                                        
                                        <% } else { %>
                                        <ul> 
                                        <% for (let i = 0; i < cart.items.length ; i++) {%>
                                            
                                                <li>
                                                  
                                                   
                                                   <span class="order-middle-left">  
                                                    <img style="width: 50px; height: 50px; margin-right: 5px; " 
                                                    src="<%=cart.items[i].productId.image[0].url%>" /> 
                                                      
                                                     <%= cart.items[i].productId.name %> x <%= cart.items[i].qty%></span>

                                                    <% if (cart.items[i].productId.onsale) { %> 
                                                        <span  style="margin-top:12px;" class="order-price"> $<%=cart.items[i].productId.saleprice * cart.items[i].qty %> </span></li>
                                                        <% }  else { %>
                                                            <span  style="margin-top:12px; "class="order-price"> $<%= cart.items[i].productId.price * cart.items[i].qty %> </span></li>
                                                            <% }%> 
                                                 
                                          
                                            
                                            <%} %>
                                        </ul>
                                            <%} %>
                                  
                                </div>
                                <div class="your-order-bottom">
                                    <ul>
                                        <li class="your-order-shipping"> Subtotal </li>
                                        <li>  $<%=cart.subTotal + cart.discount%> </li>
                                    </ul>
                                    <ul>
                                        <% if (cart.promocodes.length > 0 ) { %>
                                            <li class="your-order-shipping"><span style="color: #EAAA85;padding-left: 5px;"> 
                                                <i class="fa fa-tag" style="padding-right: 5px;"> </i><%=cart.promocodes[0].promocodeId.code%> </span></li>
                                            <li>
                                            <span style="color:#EAAA85;">
                                                - $<%=cart.discount%>
                                            </span></li>
                                            <% } %>
                                    </ul>
                                    <ul>
                                        <li class="your-order-shipping">Shipping</li>
                                        <li><span style="font-size: small;">*will be calculated on the next page</span> </li>
                                      
                                        
                                    </ul>
                                   
                                </div>

                                
                                

                                <div class="your-order-total" style="border-bottom: 0;">
                                    <ul>
                                        <li class="order-total">Total</li>
                                        <li><span style="color:rgb(171, 167, 167); font-size: small;font-weight: 100; padding-right: 10px;"> HKD </span>
                                            <span style="font-size: x-large ; color: black">  HK$<%=cart.subTotal%>  </span></li>
                                    </ul>
                                </div>
                            </div>
                            

                            
                        </div>

                        <div class="discount-code-wrapper">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gray">Coupon Code</h4>
                            </div>        
                            <div class="discount-code">
                                <p>Enter your coupon code if you have one.</p>
                                    <form action="/<%=cartId._id%>/checkout/promocode" method="POST">
                                        
                                        <input type="text" name="promocode" id="promocode_name" />
                                        
                                        <button type="submit" class="cart-btn-2">Apply Coupon</button>
                                    </form>
                                 
                                
                                
                            </div>

                            <% if(success && success.length) {%>
                                <span style="color: green; font-size: small;">     
                                    <%= success %>

                                </span>
                                   
                                <% } %>
                                
                                <% if(error && error.length) {%>
                                    <span style="color:#EAAA85; font-size: small;">     
                                    <%= error %>
                                    </span>
                                <% } %>
                        
                        
                    </div>
                    
          
                    </div>
                </div>
            </div>
        </div>
