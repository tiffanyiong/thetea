                        <form action="/<%=cartId._id%>/checkout/shipping_method?action=addContact" method="POST">
                        
                       
                        <div class="row">
                            <h3> Contact Information</h3>
                         
                            <div class="col-lg-6 col-md-6">
                                <div class="billing-info mb-4">
                                    <label style="font-size: small;">Phone Number</label>
                                    <input  class="form-control" type="text"  name="contact_info[phone]"   placeholder="Phone Number"
                                    required 
                                    <% if (typeof order.contact_info!= undefined && order.contact_info.phone!="") { %>
                                        placeholder="<%=order.contact_info.phone%>"
