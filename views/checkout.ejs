                                        <% if (typeof order.shipping_info!= undefined && order.shipping_info.region!="") { %>
                                        <% for (let region of Regions ) { %>
                                            <option value="<%=region %>" <%= order.shipping_info.region === region? 'selected': '' %>> <%=region %></option>

