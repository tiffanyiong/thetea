                                        <a href="#">Clear Shopping Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    
                    
                    <div class="row">
                        <!--subtotal-->
                    </div>
                </div>
                <% if (cart === null || cart.items.length == 0) { %>
