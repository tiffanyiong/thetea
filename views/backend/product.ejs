<!doctype html>
<html lang="en">

	<%- include('partials/head') %>
<body>
	<!-- WRAPPER -->
	<div id="wrapper">
		<!-- NAVBAR -->
		
<%- include('partials/nav') %>
		<!-- END NAVBAR -->
		<!-- LEFT SIDEBAR -->
	
<%- include('partials/leftslider') %>
		<!-- END LEFT SIDEBAR -->
		<!-- MAIN -->
		<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="container-fluid">
					<h3 class="page-title">Product info</h3>
					<div class="row">
						<div class="col-md-12">

							<!--TABLE-->	
							
							<div class="panel panel-headline">
								<div class="panel-heading">
									<h3 class="panel-title">All Product</h3>
								<div class="right">
									<div class="col-md-12 text-right"><a href="/dashboard/product/new" class="btn btn-primary">Add New Product</a></div>
								</div>
									
										
										
									
								</div>
								<div class="panel-body">
									
									<table class="table table-hover">
										<thead>
											<tr>
												
												<th>Product Name</th>
												
												<th>Category</th>
												<th>Qty</th>
												<th>Price</th>
												<th>Sale Price</th>
												<th>Action</th>

											</tr>
										</thead>

										<tbody>
											<% for (let product of products) {%>
											<tr>
												<th><a href="/dashboard/product/<%=product._id %>"> <%=product.name %></a></th>
												<td><%=product.category %></td>
												<td><%=product.qty %></td>
												<td>$<%=product.price %></td>
												<td>$<%=product.saleprice %></td>
											
												<td>
													<a href="/dashboard/product/<%=product._id %>/edit"> <button type="button" class="btn btn-info"><i class="lnr lnr-pencil"></i></button> </a>
												</td>
											</tr>
											<% }%>
										

										
										</tbody>
										
									</table>
									<div class="panel-footer">
										<div class="row">
										
											<div class="col-md-12 text-right"><a href="/dashboard/product/new" class="btn btn-primary">Add New Product</a></div>
										</div>
									</div>
								</div>
							</div>
						</div>
			<!-- END MAIN CONTENT -->
		</div>
		<!-- END MAIN -->
		<div class="clearfix"></div>
		<footer>
			<div class="container-fluid">
				<p class="copyright">Copyright &copy; 2017.Company name All rights reserved.<a target="_blank" href="http://sc.chinaz.com/moban/">&#x7F51;&#x9875;&#x6A21;&#x677F;</a></p>
			</div>
		</footer>
	</div>
	<!-- END WRAPPER -->
	<!-- Javascript -->
	<script src="../../dashboard/vendor/jquery/jquery.min.js"></script>
	<script src="../../dashboard/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="../../dashboard/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
	<script src="../../dashboard/scripts/klorofil-common.js"></script>
</body>

</html>
